<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zn.loginshareandpaydemo">

    <!-- QQSDK-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- QQ Share-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1106533446" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|mcc|mnc"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

        <activity
            android:name=".login.QQLoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|mcc|mnc"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

        <activity
            android:name=".share.ShareMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|mcc|mnc"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

        <activity
            android:name=".share.QQShareActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|mcc|mnc"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

    </application>

</manifest>