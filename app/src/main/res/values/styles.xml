<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_title</item>
        <item name="colorPrimaryDark">@color/color_content</item>
        <item name="colorAccent">@color/color_content_supplement</item>
    </style>

    <style name="Demo_AppTheme" parent="@android:style/Animation.Activity">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
    </style>

    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/ra_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/ra_slide_left_fade_out</item>
    </style>

</resources>
